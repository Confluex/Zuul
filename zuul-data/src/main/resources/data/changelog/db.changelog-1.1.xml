<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="mcantrell" id="zuul-1.1-create-audit-tables">
        <createTable tableName="SETTINGS_ENTRY_AUD">
            <column name="ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ENCRYPTED" type="BOOLEAN"/>
            <column name="KEY_NAME" type="VARCHAR(255)"/>
            <column name="VALUE" type="VARCHAR(255)"/>
            <column name="GROUP_ID" type="INT"/>
            <column name="REV" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
        </createTable>
        <addPrimaryKey tableName="SETTINGS_ENTRY_AUD"
                       columnNames="ID,REV"
                       constraintName="PK_SETTINGS_ENTRY_AUD"/>


        <createTable tableName="SETTINGS_GROUP_AUD">
            <column name="ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="ENVIRONMENT" type="VARCHAR(12)"/>
            <column name="KEY_NAME" type="VARCHAR(32)"/>
            <column name="REV" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="TINYINT"/>
        </createTable>
        <addPrimaryKey tableName="SETTINGS_GROUP_AUD"
                       columnNames="ID,REV"
                       constraintName="PK_SETTINGS_GROUP_AUD"/>

        <createTable tableName="SECURITY_USER_REVISION">
            <column autoIncrement="true" name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SECURITY_USER_REVISION"/>
            </column>
            <column name="TIMESTAMP" type="BIGINT"/>
            <column name="USER_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="mcantrell" id="zuul-1.1-populate-aud-tables">
        <sql>
            INSERT INTO SETTINGS_GROUP_AUD (ID, NAME, ENVIRONMENT, KEY_NAME, REV, REVTYPE)
            SELECT ID, NAME, ENVIRONMENT, KEY_NAME, 1 AS REV, 0 AS REVTYPE
            FROM SETTINGS_GROUP
        </sql>

        <sql>
            INSERT INTO SECURITY_USER_REVISION (USER_NAME, TIMESTAMP)
            SELECT 'generated' AS USER_NAME, 1352083440 AS TIMESTAMP
            FROM SETTINGS_GROUP
        </sql>

        <sql>
            INSERT INTO SETTINGS_ENTRY_AUD (ID, ENCRYPTED, KEY_NAME, VALUE, GROUP_ID, REV, REVTYPE)
            SELECT ID, ENCRYPTED, KEY_NAME, VALUE, GROUP_ID, 1 AS REV, 0 AS REVTYPE
            FROM SETTINGS_ENTRY
        </sql>

        <sql>
           INSERT INTO SECURITY_USER_REVISION (USER_NAME, TIMESTAMP)
           SELECT 'generated' AS USER_NAME, 1352083440 AS TIMESTAMP
           FROM SETTINGS_ENTRY
       </sql>
    </changeSet>


</databaseChangeLog>
