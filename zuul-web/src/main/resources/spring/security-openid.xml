<?xml version="1.0" encoding="UTF-8"?>

<b:beans xmlns="http://www.springframework.org/schema/security"
         xmlns:b="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">


    <b:bean id="openIdRegistrationHandler" class="org.devnull.security.spring.OpenIdRegistrationHandler">
        <b:property name="defaultRoles">
            <b:list>
                <b:value>ROLE_GUEST</b:value>
            </b:list>
        </b:property>
        <b:property name="firstUserRoles">
            <b:list>
                <b:value>ROLE_SYSTEM_ADMIN</b:value>
            </b:list>
        </b:property>
    </b:bean>

    <b:bean id="openIdAuthenticationProvider" class="org.springframework.security.openid.OpenIDAuthenticationProvider">
        <b:property name="userDetailsService" ref="openIdUserDetailsService"/>
    </b:bean>

    <authentication-manager id="authenticationManager" alias="authenticationManager">
        <authentication-provider ref="openIdAuthenticationProvider"/>
    </authentication-manager>


</b:beans>
